<div class="container">
  <div class="row">
    <div class="col-8">
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <div class="field_with_errors">
            <label for="user_name">Name</label>
          </div>
          <div class="field_with_errors">
            <%= f.text_field :name, autofocus: true, class: "form-control name", id:"user_name" %>
          </div>
        </div>
        <div class="form-group">
          <div class="field_with_errors">
            <label for="user_image">Image</label>
          </div>
          <div class="field_with_errors">
            <%= f.file_field :profile_image, placeholder: "ファイルを選択", accept: "image/*", class: "form-container-file user_image", id: "user_profile_image" %>
          </div>
        </div>
        <div class="form-group">
          <div class="field_with_errors">
            <label for="user_introduction">Introduction</label>
          </div>
          <div class="field_with_errors">
            <%= f.text_area :introduction, autofocus: true, class: "form-control introduction", id: "user_introduction" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
