<div class="container">
  <div class="row">
    <div class="col-4">
      <h2>user info</h2>
        <div>
          <%= image_tag @user.get_profile_image%>
          <table class="table">
            <tbody>
              <tr>
                <th>name</th>
                <th><%= @user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= @user.introduction %></th>
              </tr>
            </tbody>
          </table>
        <h2>New book</h2>
        <%= form_with model: @book, local:true do |f| %>
          <div class="form">
            <div class="text-field">
              <label for="book_title">Title</label>
            </div>
            <div class="text-field">
              <%= f.text_field :title, class:"form-control" %>
            </div>
          </div>
          <div class="form">
            <div class="text-field">
              <label for="book_opinion">Opinion</label>
            </div>
            <div class="text-field">
              <%= f.text_area :body, class:"form-control" %>
            </div>
          </div>
          <div class="form">
            <%= f.submit 'Create Book', class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="cpl-8">
      <h2>Books</h2>
        <table class="table">
          <thead>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </thead>
          <% @books.each do |books|%>
            <tbody>
              <tr>
                <td>
                  <%= link_to user_path(books.user.id) do %>
                    <%= image_tag books.user.get_profile_image %>
                  <% end %>
                </td>
                <td>
                  <%= link_to book_path(books.id) do %>
                    <%= books.title %>
                  <% end %>
                </td>
                <td>
                  <%= books.body %>
                </td>
              </tr>
            </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
