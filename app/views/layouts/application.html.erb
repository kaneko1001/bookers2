<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!--ヘッター-->
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <%= link_to root_path, class: 'navbar-brand' do %>
            <span>Bookers</span>
          <% end %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
              <!--ログイン中の表示-->
                <li class="nav-item">
                  <!--自分の投稿一覧-->
                  <%= link_to 'Home', user_path(current_user.id), class: 'nav-link text-light' %>
                </li>
                <li class="nav-item">
                  <!--user一覧-->
                  <%= link_to 'User', user_path, class: 'nav-link text-light' %>
                </li>
                <li class="nav-item">
                  <!--投稿一覧-->
                  <%= link_to 'Books', books_path, class: 'nav-link text-light' %>
                </li>
                <li class="nav-item">
                  <!--ログアウト-->
                  <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: 'nav-link text-light' %>
                </li>
              <% else %>
              <!--ログアウト後の表示-->
                <li class="nav-item">
                  <%= link_to 'Home', root_path, class: 'nav-link text-light' %>
                </li>
                <li class="nav-item">
                  <%= link_to 'About', about_path, class: 'nav-link text-light' %>
                </li>
                <li class="nav-item">
                  <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link text-light' %>
                </li>
                <li class="nav-item">
                  <%= link_to 'Log in', new_user_session_path, class: 'nav-link text-light' %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
