<div class="container">
  <div class="row">
    <!--サイドバー-->
    <div class="col-4">
      <%= render 'books/list', book: @book %>
    </div>
    <!--投稿詳細-->
    <div class="col-8">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user.id) do %>
                <%= image_tag @book.user.get_profile_image %><br>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book.id) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <% if @book.user.id == current_user.id %>
            <td>
              <%= link_to 'Edit', edit_book_path(@book.id), class: 'btn btn-sm btn-success' %>
            </td>
            <td>
              <%= link_to 'Destroy', book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？", class: 'btn btn-sm btn-danger' %>
            </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

