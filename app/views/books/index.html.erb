<div class="container">
  <!--エラー-->
  <div id="field-error">
    <% if @book.errors.any? %>
      <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="row">
    <!--サイドバー-->
    <div class="col-md-3">
      <%= render 'books/list', book: @book %>
    </div>
    <!--一覧-->
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </thead>
        <% @books.each do |books|%>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(books.user.id) do %>
                <%= image_tag books.user.get_profile_image %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(books.id) do %>
                <%= books.title %>
              <% end %>
            </td>
            <td>
              <%= books.body %>
            </td>
          </tr>
        </tbody>
      <% end %>
      </table>
    </div>
  </div>
</div>
